<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow">

        <ImageView
            android:id="@+id/beeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleX="0.1"
            android:scaleY="0.1"
            android:src="@drawable/bee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/resultDangerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_danger"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/resultDangerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:padding="20dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/result_danger_btn"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>