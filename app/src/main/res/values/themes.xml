<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WykrywaczSzerszeni" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_brown</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_brown</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/yellow</item>
    </style>

    <style name="Theme.WykrywaczSzerszeni.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WykrywaczSzerszeni.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WykrywaczSzerszeni.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="startstop">
        <item name="android:textSize">10sp</item>
        <item name="android:scaleX">0.3</item>
        <item name="android:scaleY">0.3</item>
    </style>

</resources>